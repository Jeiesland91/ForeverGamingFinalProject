@model IEnumerable<Publisher>

@{
    ViewData["Title"] = " | Manage Publishers";
}

<h1 class="mb-2">Manage Publishers</h1>

<h5 class="mt-2"><a asp-action="Add" asp-area="Admin" style="color: black">Add a Publisher</a></h5>

<table class="table table-bordered table-striped table-sm">
    <thead class="thead-dark">
    <tr><th style="color:aqua">PublisherId</th><th style="color:aqua">Name</th><th style="color:aqua"></th></tr>
    </thead>
    <tbody>
    @foreach (Publisher publisher in Model)
    {
        <tr>
            <td>@publisher.PublisherId</td>
            <td>@publisher.Name</td>
            <td>
                <a asp-action="ViewGames" asp-area="Admin" asp-route-id="@publisher.Name"
                   class="btn btn-outline-custom">View Games</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@publisher.PublisherId"
                   class="btn btn-outline-custom">Edit</a>
                <a asp-action="Delete" asp-area="Admin" asp-route-id="@publisher.PublisherId"
                   class="btn btn-outline-custom">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>