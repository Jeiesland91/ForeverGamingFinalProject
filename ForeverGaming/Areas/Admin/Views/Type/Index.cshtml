@using Type = ForeverGaming.Models.Type
@model IEnumerable<ForeverGaming.Models.Type>

@{
    ViewData["Title"] = " | Manage Types";
}

<h1 class="mb-2">Manage Types</h1>

<h5 class="mt-2"><a asp-action="Add" asp-area="Admin" style="color: black">Add a Type</a></h5>

<table class="table table-bordered table-striped table-sm">
    <thead class="thead-dark">
    <tr><th style="color:aqua">TypeId</th><th style="color:aqua">Name</th><th style="color:aqua"></th></tr>
    </thead>
    <tbody>
    @foreach (Type type in Model)
    {
        <tr>
            <td>@type.TypeId</td>
            <td>@type.Name</td>
            <td>
                <a asp-action="ViewGames" asp-area="Admin" asp-route-id="@type.Name"
                   class="btn btn-outline-custom">View Games</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@type.TypeId"
                   class="btn btn-outline-custom">Edit</a>
                <a asp-action="Delete" asp-area="Admin" asp-route-id="@type.TypeId"
                   class="btn btn-outline-custom">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>