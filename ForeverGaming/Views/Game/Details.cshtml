@model Game

@{
    ViewData["Title"] = " | Game Details";
}

<h1 class="thead-dark bg-dark" style="text-align: center; color:aqua">Game Details</h1>
<h1><img src="~/images/games/@Model.GameImage" alt="" /></h1>


<table class="table table-striped table-sm table-bordered">
    <thead>
    <tr class="thead-dark" table-borderless>
        <th style="color:aqua">Title:</th>
        <th style="color:aqua">@Model.Name</th>
    </tr>
    </thead>
    <tbody>
        <tr><td>Genre:</td><td>@Model.Genre.Name</td></tr>
        <tr><td>Type:</td><td>@Model.Type.Name</td></tr>
        <tr><td>Format:</td><td>@Model.Format.Name</td></tr>
        <tr><td>Rating:</td><td>@Model.Rating.Name</td></tr>
        <tr><td>Publisher:</td><td>@Model.Publisher.Name</td></tr>
    </tbody>
</table>
